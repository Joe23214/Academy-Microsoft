@model List<ProfessoreDto>

<h2>Elenco Professori</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cognome</th>
            <th>Nome</th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td> <a  href="#" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editModal-@p.Id">@p.Id</a></td>
                <td>@p.Cognome</td>
                <td>@p.Nome</td>                
                <td>
                    <a asp-action="Details" asp-route-id="@p.Id">Dettagli</a> |
                    <a asp-action="Edit" asp-route-id="@p.Id">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@p.Id">Elimina</a>
                </td>
            </tr>
        <div class="modal fade" id="editModal-@p.Id" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form asp-action="Edit" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title">Modifica Professore</h5>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="Id" value="@p.Id" />
                            <div class="mb-2">
                                <label>Cognome</label>
                                <input name="Cognome" class="form-control" value="@p.Cognome" />
                            </div>                       
                            <div class="mb-2">
                                <label>Nome</label>
                                <input name="Nome" class="form-control" value="@p.Nome" />
                            </div>                                                   
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success">Salva</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Nuovo Professore</a>
@model IEnumerable<Docente>

<h2>Elenco Docenti</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Azioni</th>
            <th>Gestione Corsi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Id</td>
                <td>@d.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@d.Id" class="btn btn-info btn-sm">Dettagli</a>
                    <a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-warning btn-sm">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@d.Id" class="btn btn-danger btn-sm">Elimina</a>
                </td>
                <td>
                    <a asp-action="AddCorsi" asp-route-id="@d.Id" class="btn btn-secondary btn-sm">Gestisci Corsi</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Nuovo Docente</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-light">Dashboard</a>

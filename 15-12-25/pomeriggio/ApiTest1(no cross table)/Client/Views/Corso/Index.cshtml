@model IEnumerable<Corso>

<h2>Elenco Corsi</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Codice</th>
            <th>Titolo</th>
            <th>Azioni</th>
            <th>Gestione Studenti</th>
            <th>Gestione Docenti</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.codiceCorso</td>
                <td>@c.Titolo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-info btn-sm">Dettagli</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Elimina</a>
                </td>
                <td>
                    <a asp-action="AddStudenti" asp-route-id="@c.Id" class="btn btn-secondary btn-sm">Gestisci Studenti</a>
                </td>
                <td>
                    <a asp-action="AddDocenti" asp-route-id="@c.Id" class="btn btn-secondary btn-sm">Gestisci Docenti</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Nuovo Corso</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-light">Dashboard</a>

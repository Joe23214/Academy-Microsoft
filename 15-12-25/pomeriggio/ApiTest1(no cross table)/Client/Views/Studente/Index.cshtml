@model IEnumerable<Studente>

<h2>Elenco Studenti</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Età</th>
            <th>Matricola</th>
            <th>Azioni</th>
            <th>Gestione Corsi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Nome</td>
                <td>@s.Cognome</td>
                <td>@s.Eta</td>
                <td>@s.Matricola</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-info btn-sm">Dettagli</a>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning btn-sm">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-sm">Elimina</a>
                </td>
                <td>
                    <a asp-action="AddCorsi" asp-route-id="@s.Id" class="btn btn-secondary btn-sm">Gestisci Corsi</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Nuovo Studente</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-light">Dashboard</a>

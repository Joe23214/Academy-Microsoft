@model IEnumerable<Corso>

<h2>Elenco Corsi</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Titolo</th>
            <th>Codice corso</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Titolo</td>
                <td>@s.codiceCorso</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id">Dettagli</a> |
                    <a asp-action="Edit" asp-route-id="@s.Id">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@s.Id">Elimina</a>
                    <a asp-action="AddStudenti" asp-route-id="@s.Id" class="btn btn-sm btn-success">
                        Aggiungi Studenti
                    </a>

                    <a asp-action="AddDocenti" asp-route-id="@s.Id" class="btn btn-sm btn-info">
                        Aggiungi Docenti
                    </a>
                </td>
            </tr>
           
        }
    </tbody>
</table>



<a asp-action="Create" class="btn btn-primary">Nuovo Corso</a>
<a asp-controller="Home" asp-action="Index">Torna alla Dashboard</a>